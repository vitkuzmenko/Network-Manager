source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

target 'Network Manager' do
    platform :ios, '9.0'
    pod 'Alamofire', '4.9.1'                         # HTTP networking       https://github.com/Alamofire/Alamofire
    pod 'ObjectMapper', '3.5.1'                      # JSON Mapping          https://github.com/Hearst-DD/ObjectMapper
    pod 'ReachabilitySwift', '5.0.0'
end

target 'NetworkManagerExample' do
    platform :osx, '10.10'
    pod 'Alamofire', '4.9.1'                         # HTTP networking       https://github.com/Alamofire/Alamofire
    pod 'ObjectMapper', '3.5.1'                      # JSON Mapping          https://github.com/Hearst-DD/ObjectMapper
    pod 'ReachabilitySwift', '5.0.0'
end

target 'TVExampple' do
    platform :tvos, '9.0'
    pod 'Alamofire', '4.9.1'                         # HTTP networking       https://github.com/Alamofire/Alamofire
    pod 'ObjectMapper', '3.5.1'                      # JSON Mapping          https://github.com/Hearst-DD/ObjectMapper
    pod 'ReachabilitySwift', '5.0.0'
end

